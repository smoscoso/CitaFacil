@model List<CitaFacil.Models.Fecha>
@{
    ViewData["Title"] = "Historial";
}

<link rel="stylesheet" href="~/css/Historial.css" asp-append-version="true" />

<head>
    <nav class="navbar navbar-expand-sm navbar-light" id="neubar">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="~/img/Logo.png" height="60" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class=" collapse navbar-collapse">
                <ul class="navbar-nav ms-auto ">
                    <li class="nav-item">
                        <a class="nav-link mx-2 active" asp-controller="Cliente" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-2 active" asp-controller="Cliente" asp-action="Calendario">Calendario de citas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-2 active" asp-controller="Cliente" asp-action="Historial">Historial de citas</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</head>
<script>
    // Get the selected date from the hidden input field
    const selectedDateInput = document.getElementById("selectedDate");
    const selectedDateDisplay = document.getElementById("selectedDateDisplay");

    if (selectedDateInput.value) {
        const selectedDate = new Date(selectedDateInput.value);
        selectedDateDisplay.textContent = selectedDate.toDateString();
    }
</script>
<h2>Historial de Fechas Seleccionadas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fecha in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => fecha.fecha)</td>
            </tr>
        }
    </tbody>
</table>


